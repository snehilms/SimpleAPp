<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/vegetables"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:background="#1C7E20"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Vegetables"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/flower"
        app:layout_constraintTop_toBottomOf="@+id/flower"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/flower"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:background="#8054CD"
        android:fontFamily="@font/comfortaa_bold"
        android:shadowColor="#FFFFFF"
        android:text="Flowers"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/animal"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginTop="240dp"
        android:background="#EC5F32"
        android:fontFamily="@font/comfortaa_bold"
        android:shadowColor="#3E3636"
        android:text="Animal"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Task App"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>